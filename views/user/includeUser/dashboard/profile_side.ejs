<div class="tab-pane fade dashboard-profile dashboard" id="profile">
    

    <div class="box-head">
        <h3>Profile Details</h3>
    </div>

    <ul class="dash-profile">

        <li class="mb-0">
            <div class="left">
                <h6 class="font-light">Name</h6>
            </div>
            <div class="right">
                <h6><%= user.fullName %></h6>
            </div>
            <a href="javascript:void(0)" data-bs-toggle="modal" data-bs-target="#editModal" data-field-type="name" data-current-value="<%= user.fullName %>">Edit</a>
        </li>
        <li>
            <div class="left">
                <h6 class="font-light">Phone No.</h6>
            </div>
            <div class="right">
                <h6><%= user.phone %></h6>
            </div>
            <a href="javascript:void(0)" data-bs-toggle="modal" data-bs-target="#editModal" data-field-type="phone" data-current-value="<%= user.phone %>">Edit</a>
        </li>
        <li>
            <div class="left">
                <h6 class="font-light">Email Address</h6>
            </div>
            <div class="right">
                <h6><%= user.email %></h6>
            </div>
            <a href="javascript:void(0)" data-bs-toggle="modal" data-bs-target="#editModal" data-field-type="email" data-current-value="<%= user.email %>">Edit</a>
        </li>
    
        
    
        <li class="mb-0">
            <div class="left">
                <h6 class="font-light">Password</h6>
            </div>
            <div class="right">
                <h6>●●●●●●</h6>
            </div>
            <a href="javascript:void(0)" data-bs-toggle="modal" data-bs-target="#editModal" data-field-type="password" data-current-value="">Edit</a>
        </li>
    </ul>

    <div class="box-head mt-5">
        <h3>Referal code</h3>
    </div>
    <ul class="dash-profile ">
      
        <% if (adminRef.isEnabled) { %>
            <% if (refer) { %>
                <!-- Display referral code if it exists -->
                <li>Your Referral Code: </li>
                <h5><%= refer.referralCode %></h5>
            <% } else { %>
                <!-- Show button to generate referral code if it does not exist -->
                <li>
                    <button id="generateReferralCode" class="btn btn-primary">Generate Referral Code</button>
                </li>
            <% } %>
        <% } else { %>
            <!-- Content or message to display if the referral system is disabled -->
            <li>Referral system is currently disabled.</li>
        <% } %>
    </ul>
    
    
    
    
</div>
<!-- Common Edit Modal -->
<div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="editModalLabel">Edit</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form id="editForm">
            <div class="mb-3">
              <label for="editInput" class="col-form-label"></label>
              <input type="text" class="form-control" id="editInput" name="editInput" required>
            </div>
            <input type="hidden" id="fieldType" value="">
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
              <button type="submit" class="btn btn-primary">Save changes</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
  
  