<div class="row g-3 align-center">
    <div class="col-lg-5">
        <div class="form-group">
            <label class="form-label">Select Type of Offer</label>
        </div>
    </div>
    <div class="col-lg-7">
        <div class="form-group">
            <div class="form-control-wrap">
                <select name="offerType" id="offerTypeSelect" class="form-select form-control-lg">
                    <option value="Category">Category</option>
                    <option value="Product">Product</option>
                </select>
            </div>
        </div>
    </div>
</div>

<div class="row g-3 align-center"" id="categoryOptions" style="display: none;">
    <!-- Category options will be rendered here -->
</div>

<div class="row g-3 align-center"" id="productOptions" style="display: none;"   >
    <!-- Product options will be rendered here -->
</div>





                                        <div class="row g-3 align-center" id="discountInputGroup">
                                            <div class="col-lg-5">
                                                <div class="form-group">
                                                    <label class="form-label">Discount in Percent</label>
                                                </div>
                                            </div>
                                            <div class="col-lg-7">
                                                <div class="form-group">
                                                    <div class="form-control-wrap">
                                                        <input type="text" name="offerDiscount"
                                                            class="form-control form-control-lg" value=""
                                                            placeholder="2%">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row g-3 align-center">
                                            <div class="col-lg-5">
                                                <div class="form-group"><label class="form-label">Pick Date and Time of
                                                        Offer expiry</label></div>
                                            </div>
                                            <div class="col-lg-4">
                                                <div class="form-group">
                                                    <div class="form-control-wrap ">
                                                        <div class="form-icon form-icon-right"><em
                                                                class="icon ni ni-calendar-alt"></em></div><input
                                                            type="text"
                                                            class="form-control form-control-xl form-control-outlined date-picker"
                                                            name="coupanDate" id="outlined-date-picker"><label
                                                            class="form-label-outlined" for="outlined-date-picker">Date
                                                            Picker</label>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-lg-3">
                                                <div class="form-group">
                                                    <div class="form-control-wrap has-timepicker">
                                                        <div class="form-icon form-icon-right"><em
                                                                class="icon ni ni-clock"></em></div><input type="text"
                                                            class="form-control form-control-xl form-control-outlined time-picker"
                                                            name="coupanTime" id="outlined-time-picker"><label
                                                            class="form-label-outlined" for="outlined-time-picker">Time
                                                            Picker</label>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row g-3 align-center">
                                            <div class="col-lg-5">
                                                <div class="form-group">
                                                    <label class="form-label">Max Times offer can be used</label>
                                                </div>
                                            </div>
                                            <div class="col-lg-7">
                                                <div class="form-group">
                                                    <div class="form-control-wrap">
                                                        <input type="text" name="offerMaxUses"
                                                            class="form-control form-control-lg" value=""
                                                            placeholder="Unlimited">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row g-3 align-center">
                                            <div class="col-lg-5">
                                                <div class="form-group">
                                                    <label class="form-label">Enable Offer</label>
                                                </div>
                                            </div>
                                            <div class="col-lg-7">
                                                <ul class="custom-control-group g-3 align-center flex-wrap">
                                                    <li>
                                                        <div class="custom-control custom-radio checked">
                                                            <input type="radio" class="custom-control-input" checked=""
                                                                name="offerEnable" id="offer-enable-yes" value="Enable">
                                                            <label class="custom-control-label"
                                                                for="offer-enable-yes">Enable</label>
                                                        </div>
                                                    </li>
                                                    <li>
                                                        <div class="custom-control custom-radio">
                                                            <input type="radio" class="custom-control-input"
                                                                name="offerEnable" id="offer-enable-no" value="Disable">
                                                            <label class="custom-control-label"
                                                                for="offer-enable-no">Disable</label>
                                                        </div>
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                        <div class="row g-3">
                                            <div class="col-lg-7 offset-lg-5">
                                                <div class="form-group mt-2">
                                                    <button type="submit" id="submitOffer"
                                                        class="btn btn-lg btn-primary">Create Offer</button>
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Existing Offers Table -->
                    <div class="nk-block nk-block-lg">
                        <div class="card">
                            <div class="card-inner">
                                <h3 class="card-title">Existing Offers</h3>
                                <div class="card-body">
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th>Offer Name</th>
                                                <th>Offer Description</th>
                                                <th>Type</th>
                                                <th>Discount</th>
                                                <th>Expiry Date</th>
                                                <th>Max Uses</th>
                                                <th>Status</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% offers.forEach(offer => { %>
                                                <tr>
                                                    <td><%= offer.offerName %></td>
                                                    <td><%= offer.offerDescription %></td>
                                                    <td><%= offer.offerType %></td>
                                                    <td>
                                                        <% if (offer.offerType === 'Percent') { %>
                                                            <%= offer.offerDiscount %>% 
                                                        <% } else { %>
                                                            â‚¹<%= offer.offerDiscount %>
                                                        <% } %>
                                                    </td>
                                                    <td><%= new Date(offer.offerValidUntil).toDateString() %></td>
                                                    <td><%= offer.offerMaxUses ? offer.offerMaxUses : 'Unlimited' %></td>
                                                    <td><%= offer.offerEnable ? 'Active' : 'Inactive' %></td>
                                                    <td>
                                                        <button class="btn btn-danger remove-offer" data-offerid="<%= offer._id %>">
                                                            <em class="icon ni ni-trash-empty"></em>
                                                        </button>
                                                    </td>
                                                    
                                                    
                                                </tr>
                                            <% }); %>
                                        </tbody>
                                        
                                        
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>