<div class="nk-content">
    <div class="container-fluid">
        <div class="nk-content-inner">
            <div class="nk-content-body">
                <div class="components-preview mx-auto">
                    <!-- Referral Offer Settings Section -->
                    <div class="nk-block nk-block-lg">
                        <div class="card">
                            <div class="card-inner">
                                <h3 class="card-title">Referral Offer Settings</h3>
                                <div class="card-body">
                                    <form id="referralSettingsForm">
                                        <div class="row gy-3">
                                            <!-- Toggle for Enabling/Disabling Referral -->
                                            <div class="col-md-6 d-flex align-items-center">
                                                <label class="form-label me-2">Enable Referral Offers</label>
                                                <div class="custom-control custom-switch">
                                                    <input type="checkbox" class="custom-control-input" id="referralToggle" <%= referral.isEnabled ? 'checked' : '' %>>
                                                    <label class="custom-control-label" for="referralToggle"></label>
                                                </div>
                                                
                                            </div>
                                            
                                            <!-- Field for Updating Referral Reward -->
                                            <div class="col-md-6">
                                                <label for="referralReward" class="form-label">Referral Reward</label>
                                                <input type="text" class="form-control" id="referralReward" placeholder="Enter reward amount" value="<%=referral.reward%>">
                                            </div>
                                        </div>

                                        <div class="row gy-3">
                                            <!-- Submit Button -->
                                            <div class="col-12 mt-5">
                                                <button type="submit" class="btn btn-primary">Update Settings</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="nk-block nk-block-lg">
                        <div class="card">
                            <div class="card-inner">
                                <h3 class="card-title">Create New Offer</h3>
                                <div class="card-body">
                                    <!-- Offer creation form -->
                                    <form action="#" class="gy-3" id="offerForm">
                                        <div class="row g-3 align-center">
                                            <div class="col-lg-5">
                                                <div class="form-group">
                                                    <label class="form-label" for="offerName">Offer Name</label>
                                                </div>
                                            </div>
                                            <div class="col-lg-7">
                                                <div class="form-group">
                                                    <div class="form-control-wrap">
                                                        <input type="text" name="offerName"
                                                            class="form-control form-control-lg" value=""
                                                            placeholder="New Year Dhamaka">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row g-3 align-center">
                                            <div class="col-lg-5">
                                                <div class="form-group">
                                                    <label class="form-label" for="offerDescription">Offer
                                                        Description</label>
                                                </div>
                                            </div>
                                            <div class="col-lg-7">
                                                <div class="form-group">
                                                    <div class="form-control-wrap">
                                                        <input type="text" name="offerDescription"
                                                            class="form-control form-control-lg" value=""
                                                            placeholder="Assured 10% off on purchasing sneakers">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
